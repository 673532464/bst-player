<module>
    <inherits name="com.google.gwt.user.User"/>
    <inherits name="com.bramosystems.oss.player.core.event.Event" />
    <inherits name="com.bramosystems.oss.player.util.Util" />
    <stylesheet src="custom-control-styles.css" />

	<!-- WMPStateManager mapping for IE6/7/8 -->
    <replace-with class="com.bramosystems.oss.player.core.client.impl.WMPStateManagerIE">
        <when-type-is class="com.bramosystems.oss.player.core.client.impl.WMPStateManager"/>
        <any>
            <when-property-is name="user.agent" value="ie6"/>
            <when-property-is name="user.agent" value="ie8"/>
        </any>
    </replace-with>

    <replace-with class="com.bramosystems.oss.player.core.client.impl.WMPStateManagerWebkit">
        <when-type-is class="com.bramosystems.oss.player.core.client.impl.WMPStateManager"/>
        <any>
            <when-property-is name="user.agent" value="safari" />
            <!--when-property-is name="user.agent" value="opera" /-->
        </any>
    </replace-with>

    <!-- QTStateManager mapping for IE6/7/8 -->
    <replace-with class="com.bramosystems.oss.player.core.client.impl.QTStateManagerIE">
        <when-type-is class="com.bramosystems.oss.player.core.client.impl.QTStateManager"/>
        <any>
            <when-property-is name="user.agent" value="ie6"/>
            <when-property-is name="user.agent" value="ie8"/>
        </any>
    </replace-with>

    <!-- PlayerUtilImpl mapping for IE6/7/8 -->
    <replace-with class="com.bramosystems.oss.player.core.client.impl.PlayerUtilImplIE">
        <when-type-is class="com.bramosystems.oss.player.core.client.impl.PlayerUtilImpl"/>
        <any>
            <when-property-is name="user.agent" value="ie6"/>
            <when-property-is name="user.agent" value="ie8"/>
        </any>
    </replace-with>

    <!-- MimePool mappings -->
    <!--when-property-is name="user.agent" value="ie6,ie8,gecko,gecko1_8,safari,opera"/-->
    <replace-with class="com.bramosystems.oss.player.core.client.impl.MimePool.MimePoolMozilla">
        <when-type-is class="com.bramosystems.oss.player.core.client.impl.MimePool"/>
        <any>
            <when-property-is name="user.agent" value="gecko1_8"/>
            <when-property-is name="user.agent" value="gecko"/>
        </any>
    </replace-with>

    <replace-with class="com.bramosystems.oss.player.core.client.impl.MimePool.MimePoolSafari">
        <when-type-is class="com.bramosystems.oss.player.core.client.impl.MimePool"/>
        <when-property-is name="user.agent" value="safari"/>
    </replace-with>

    <!-- PlayerWidgetFactoryImpl mapping for IE6/7/8 -->
    <replace-with class="com.bramosystems.oss.player.core.client.impl.PlayerWidgetFactoryIE">
        <when-type-is class="com.bramosystems.oss.player.core.client.impl.PlayerWidgetFactory"/>
        <any>
            <when-property-is name="user.agent" value="ie6"/>
            <when-property-is name="user.agent" value="ie8"/>
        </any>
    </replace-with>

    <replace-with class="com.bramosystems.oss.player.core.client.impl.NativePlayerProperties.NativePlayerPropertiesSafari">
        <when-type-is class="com.bramosystems.oss.player.core.client.impl.NativePlayerProperties"/>
        <when-property-is name="user.agent" value="safari"/>
    </replace-with>
</module>
