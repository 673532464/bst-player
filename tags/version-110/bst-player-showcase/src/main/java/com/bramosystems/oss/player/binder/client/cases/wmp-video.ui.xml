<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:showcase='urn:import:com.bramosystems.oss.player.binder.client'
  xmlns:player='urn:import:com.bramosystems.oss.player.uibinder.client'>

    <g:VerticalPanel spacing='10' width='80%'>
        <g:Label styleName='section-desc'>Embedding Video</g:Label>
        <player:WinMediaPlayer autoplay='false' height='350px' width='100%' showLogger='true'
            mediaURL='http://bst-player.googlecode.com/svn/tags/showcase/media/islamic-jihad.wmv' />
        <showcase:Sources name='wmpVideo' />

        <g:Label styleName='section-desc'>Auto-adjust player to video size</g:Label>
        <g:HTML styleName='media-desc'>
            Let player resize its size to match the video dimension.
        </g:HTML>
        <player:WinMediaPlayer autoplay='false' height='350px' width='100%' showLogger='true'
            mediaURL='http://bst-player.googlecode.com/svn/tags/showcase/media/islamic-jihad.wmv'
            resizeToVideoSize='true' />
        <showcase:Sources name='wmpVideoAuto' />
    </g:VerticalPanel>
</ui:UiBinder>
