<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:showcase='urn:import:com.bramosystems.oss.player.binder.client'
  xmlns:player='urn:import:com.bramosystems.oss.player.uibinder.client'>

    <g:VerticalPanel spacing='10' width='80%'>
        <g:Label styleName='section-desc'>Embedding QT Video</g:Label>
        <player:QuickTimePlayer autoplay='false' height='300px' width='100%' showLogger='true'
                mediaURL='GWT-HOST::media/traffic.mp4' />
        <showcase:Sources name='qtVideo' />

        <g:Label styleName='section-desc'>Auto-adjust player to video size</g:Label>
        <g:HTML styleName='media-desc'>
            Let player resize its size to match the video dimension.
        </g:HTML>
        <player:QuickTimePlayer autoplay='false' height='300px' width='100%' showLogger='true'
                mediaURL='GWT-HOST::media/traffic.mp4' resizeToVideoSize='true' />
        <showcase:Sources name='qtVideoAuto' />
    </g:VerticalPanel>
</ui:UiBinder>
