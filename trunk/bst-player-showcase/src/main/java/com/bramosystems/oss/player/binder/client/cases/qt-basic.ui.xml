<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:showcase='urn:import:com.bramosystems.oss.player.binder.client'
  xmlns:player='urn:import:com.bramosystems.oss.player.uibinder.client'>

    <g:VerticalPanel spacing='10' width='80%'>
        <g:Label styleName='section-desc'>Embedding sound</g:Label>
        <g:HTML styleName='media-desc'>
            Embed QuickTime player plugin to play media automatically.
        </g:HTML>
        <player:QuickTimePlayer autoplay='true' height='16px' width='100%' 
                    mediaURL='GWT-HOST::media/thunder.mp3' />
        <showcase:Sources name='qtBasic' />
    </g:VerticalPanel>
</ui:UiBinder>
