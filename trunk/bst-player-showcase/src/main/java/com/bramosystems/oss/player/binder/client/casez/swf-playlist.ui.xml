<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:showcase='urn:import:com.bramosystems.oss.player.binder.client'
  xmlns:player='urn:import:com.bramosystems.oss.player.uibinder.client'>

    <g:VerticalPanel spacing='10' width='80%'>
        <g:Label styleName='section-desc'>Using Playlists</g:Label>
        <g:HTML styleName='media-desc'>
            M3U Playlists
        </g:HTML>
        <player:FlashMediaPlayer autoplay='true' height='20px' width='100%'
                showLogger='true' mediaURL='GWT-HOST::media/playlist.m3u' />
        <showcase:Sources name='swfPlaylist' />
    </g:VerticalPanel>
</ui:UiBinder>
