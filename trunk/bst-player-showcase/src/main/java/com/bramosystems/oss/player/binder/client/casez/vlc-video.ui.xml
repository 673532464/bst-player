<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:showcase='urn:import:com.bramosystems.oss.player.binder.client'
  xmlns:player='urn:import:com.bramosystems.oss.player.uibinder.client'>

    <g:VerticalPanel spacing='10' width='80%'>
        <g:Label styleName='section-desc'>Embedding VLC Video</g:Label>
        <player:VLCPlayer autoplay='false' height='350px' width='100%' showLogger='true'
            mediaURL='GWT-HOST::media/traffic.flv' />
        <showcase:Sources name='vlcVideo' />

        <g:Label styleName='section-desc'>Auto-adjust player to video size</g:Label>
        <g:HTML styleName='media-desc'>
            Let player resize its size to match the video dimension.
        </g:HTML>
        <player:VLCPlayer autoplay='false' height='350px' width='100%' showLogger='true'
            mediaURL='GWT-HOST::media/traffic.flv' resizeToVideoSize='true' />
        <showcase:Sources name='vlcVideoAuto' />
    </g:VerticalPanel>
</ui:UiBinder>
