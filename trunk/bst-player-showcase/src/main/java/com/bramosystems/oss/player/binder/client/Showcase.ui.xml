<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'
    xmlns:showcase='urn:import:com.bramosystems.oss.player.binder.client'>
    <ui:style>
        .menu {
            float: left;
            width: 200px;
        }
        .use-case {
            float: right;
            width: 750px;
        }
        .clear {
            clear: both;
        }
        .app-wrapper {
            margin: auto;
            width: 950px;
            top: 4px;
        }
        .app-footer {
            font-size: 80%;
            text-align:center;
            margin-top: 5px;
            padding-top: 5px;
        }
        .app-banner {
            margin-bottom: 0px;
            font-size: 180%;
            color: #4b4b93;
            font-weight: bold;
        }
        .app-version {
            margin-bottom: 10px;
            color: #4b4b93;
            font-weight: bold;
            font-style:italic;
        }
    </ui:style>

    <g:FlowPanel styleName='{style.app-wrapper}'>
        <g:HTML>
            <div class='app-banner'>BST Player Showcase</div>
            <div class='app-version'>version 1.1-SNAPSHOT</div>
        </g:HTML>
        <g:FlowPanel styleName='{style.menu}'>
            <showcase:Menu />
        </g:FlowPanel>
        <g:FlowPanel styleName='{style.use-case}'>
            <showcase:Case />
        </g:FlowPanel>
        <g:FlowPanel styleName='{style.clear}' />
        <g:HTML styleName='app-footer'>
                Copyright &#169; 2009 Braheem Sikiru
            <br/>
                All other product, service names, brands, or trademarks, are the property
                of their respective owners.
        </g:HTML>
    </g:FlowPanel>
</ui:UiBinder>
