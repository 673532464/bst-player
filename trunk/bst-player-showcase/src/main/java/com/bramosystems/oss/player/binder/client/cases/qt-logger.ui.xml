<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder' xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:showcase='urn:import:com.bramosystems.oss.player.binder.client'
  xmlns:player='urn:import:com.bramosystems.oss.player.uibinder.client'>

    <g:VerticalPanel spacing='10' width='80%'>
        <g:Label styleName='section-desc'>Using the Logger widget</g:Label>
        <g:HTML styleName='media-desc'>
            The Logger widget displays useful information that shows that state
            of the player
        </g:HTML>
        <player:QuickTimePlayer autoplay='false' height='16px' width='100%'
                showLogger='true' mediaURL='GWT-HOST::media/o-na-som.mp3' />
        <showcase:Sources name='qtLogger' />
    </g:VerticalPanel>
</ui:UiBinder>
