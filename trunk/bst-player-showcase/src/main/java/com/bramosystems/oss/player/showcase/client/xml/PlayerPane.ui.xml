<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style src="css/styles.css"/>
    <ui:style field="p">
        .player-panel {
            margin-top: 10px;
            overflow: auto;
            height: 90%;
            padding: 0px 10%;
        }
    </ui:style>

    <g:FlowPanel>
        <g:Label styleName='{style.panel-title}' ui:field='title' />
        <g:SimplePanel styleName='{p.player-panel}' ui:field='panel'/>
    </g:FlowPanel>
</ui:UiBinder>