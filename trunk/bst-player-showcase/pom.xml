<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>bst-player</artifactId>
        <groupId>com.bramosystems.oss.player</groupId>
        <version>1.1-SNAPSHOT</version>
    </parent>
    <artifactId>bst-player-showcase</artifactId>
    <packaging>war</packaging>
    <name>BST Player Showcase</name>
    <description>
        Showcases the features of the BST Player API
    </description>

    <properties>
        <gwt.out>${project.build.directory}/${project.build.finalName}</gwt.out>
    </properties>

    <build>
        <finalName>showcase</finalName>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>gwt-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>showcase</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <module>com.bramosystems.oss.player.showcase.Showcase</module>
                            <style>DETAILED</style>
                            <disableCastChecking>true</disableCastChecking>
                            <disableClassMetadata>true</disableClassMetadata>
                        </configuration>
                    </execution>
                    <execution>
                        <id>js-case</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <module>com.bramosystems.oss.player.jshowcase.JSShowcase</module>
                            <style>DETAILED</style>
                            <webappDirectory>${gwt.out}/jscript</webappDirectory>
                            <disableCastChecking>true</disableCastChecking>
                            <disableClassMetadata>true</disableClassMetadata>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <version>${project.version}</version>
            <artifactId>bst-player-api</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
