<?xml version="1.0" encoding="UTF-8"?>
<project>
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <artifactId>parent</artifactId>
        <groupId>com.bramosystems.oss.player</groupId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>bst-player-showcase</artifactId>
    <packaging>war</packaging>
    <name>BST Player Showcase</name>
    <description>
        Showcases the features of the BST Player API
    </description>

    <build>
        <finalName>showcase</finalName>
        <plugins>
            <plugin>
                <groupId>net.sf.mgp</groupId>
                <artifactId>maven-gwt-plugin</artifactId>
                <version>1.0.2</version>
                <executions>
                    <execution>
                        <id>js-showcase</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <module>com.bramosystems.gwt.player.showcase.JSShowcase</module>
                            <jvmArgs>-Xmx256M</jvmArgs>
                            <outputDirectory>${gwt.out.dir}</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>showcase</id>
                        <goals>
                            <goal>compile</goal>
                        </goals>
                        <configuration>
                            <module>com.bramosystems.gwt.player.showcase.Showcase</module>
                            <jvmArgs>-Xmx256M</jvmArgs>
                            <outputDirectory>${gwt.out.dir}</outputDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <properties>
        <gwt.out.dir>${project.build.directory}/${project.build.finalName}</gwt.out.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.google.gwt</groupId>
            <artifactId>gwt-user</artifactId>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <version>${project.version}</version>
            <artifactId>bst-player-api</artifactId>
            <scope>provided</scope>
        </dependency>
    </dependencies>
</project>
