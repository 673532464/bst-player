<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:with field="x" type="com.bramosystems.oss.player.showcase.client.images.Bundle"/>
    <ui:style>
        .panel {
            line-height: 2;
        }
    </ui:style>
    <g:HTMLPanel styleName='{x.css.pluginOptions}'>
        <div>Select your desired plugin</div>
        <g:FlowPanel styleName='{style.panel}'>
            <g:RadioButton name='plugin' styleName='{x.css.pluginOption}' ui:field='html5'>
            HTML5
                <code>&lt;video&gt;</code>
            </g:RadioButton>
            <g:RadioButton name='plugin' styleName='{x.css.pluginOption}' ui:field='flash'>
            Flash plugin
            </g:RadioButton>
            <g:RadioButton name='plugin' styleName='{x.css.pluginOption}' ui:field='wmp'>
            Windows Media Player plugin
            </g:RadioButton>
            <g:RadioButton name='plugin' styleName='{x.css.pluginOption}' ui:field='vlc'>
            VLC Media Player plugin
            </g:RadioButton>
            <g:RadioButton name='plugin' styleName='{x.css.pluginOption}' ui:field='qt'>
            QuickTime Player plugin
            </g:RadioButton>
            <g:RadioButton name='plugin' styleName='{x.css.pluginOption}' ui:field='divx'>
            DivX&#174; Web Player plugin
            </g:RadioButton>
            <g:RadioButton name='plugin' styleName='{x.css.pluginOption}' ui:field='auto'>
            Auto-select
            </g:RadioButton>
        </g:FlowPanel>
    </g:HTMLPanel>
</ui:UiBinder>